<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.area54labs.jadwalkrl2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="net.area54labs.jadwalkrl2.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.area54labs.jadwalkrl2.SelectorActivity"
            android:label="@string/title_activity_selector"></activity>
        <activity
            android:name="net.area54labs.jadwalkrl2.ScheduleActivity"
            android:label="@string/title_activity_schedule"></activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_route_detail"></activity>

        <provider
            android:name=".data.AppProvider"
            android:authorities="net.area54labs.jadwalkrl2"
            android:exported="false"
            android:syncable="true" />

        <service android:name=".service.ScheduleService" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
</manifest>
