<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Header.Station" parent="AppTheme.Text.Dark">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="AppTheme.Header.TimeRange" parent="AppTheme.Text.Dark">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Item.TimeRange" parent="AppTheme.Text.Dark">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.ListItem.Time">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.ListItem.Text">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="AppTheme.Detail.Key">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="AppTheme.Detail.Value">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="AppTheme.Detail.Time">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AppTheme.Detail.TrainNo">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
</resources>